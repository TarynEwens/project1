<% provide(:title, @user.name) %>


<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <div class="name">
          <%= @user.name %>
        </div>
        <% if @user.image.present? %>
        <div class="circle-img">
          <%= image_tag @user.image, :alt => @user.name%>
        </div>
        <% end %>

        <div class="follow">
          <%= render 'shared/follow_form' if @current_user.present?  %>

        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
        </div>

      </h1>
    </section>
  </aside>
</div>




  <ul>
    <% if @user.bio.present? %>
      <li><%= @user.bio %></li>
    <% end %>
    <% if @user.dob.present? %>
      <li>Born <%= @user.dob.strftime "%B %-d, %Y"%></li>
    <% end %>
    <% if @user.location.present? %>
    <li>Currently <%= @user.location %></li>
    <% end %>
  </ul>


  <div class="col-md-8">
  <% if @user.woofs.any? %>
    <h3>Microposts (<%= @user.woofs.count %>)</h3>
    <ol class="woofs">
      <%= render @woofs %>
    </ol>
    <%= will_paginate @woofs %>
  <% end %>
</div>
