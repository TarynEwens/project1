<% provide(:title, @user.name) %>


<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <div class="name">
          <%= @user.name %>
        </div>
        <% if @user.image.present? %>
        <div class="circle-img img-circle">
          <%= image_tag @user.image, :alt => @user.name%>
        </div>
        <% end %>

        <div class="follow">
          <%= render 'shared/follow_form' if @current_user.present?  %>

        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
        </div>

      </h1>
    </section>
  </aside>
</div>




  <ul>
    <% if @user.bio.present? %>
      <li><%= @user.bio %></li>
    <% end %>
    <% if @user.dob.present? %>
      <li>Born <%= @user.dob.strftime "%B %-d, %Y"%></li>
    <% end %>
    <% if @user.location.present? %>
    <li>Currently <%= @user.location %></li>
    <% end %>
  </ul>


  <% unless @user.woofs.empty? %>
  <h2>Woofs</h2>
  <ul>
    <% @user.woofs.order(:created_at).reverse.first(20).each do |woof| %>
    <li>
      <%= woof.status %> <BR/>
      <%= time_ago_in_words(woof.created_at)  %> ago
    </li>
    <% end %>
  </ul>
  <% end %>

  <% if @current_user.id == @user.id %>
  <div class="controls">
    <%= link_to 'Edit Profile', edit_user_path(@current_user)%>
    <%= button_to 'Delete account', @user, :method => 'delete', :data => { :confirm => 'Are you sure?' }%>
  </div>
<% end %>
