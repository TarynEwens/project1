  <div class="container">
    <%= link_to "WOOFER", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <% if logged_in? %>

                  <li><%= link_to 'Home', root_path %></li>
                  <li><%= link_to 'Users', users_path %></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
