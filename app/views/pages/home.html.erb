<% provide(:title, "Home") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="woof_form">
        <%= render 'shared/woof_form' %>
      </section>
    </aside>
  </div>

  <div class="col-md-8">
     <h3>Woofs Feed</h3>
     <%= render 'shared/feed' %>
   </div>

<% else %>

<div class="center jumbotron">
  <h1>Welcome to WOOFER</h1>

  <h2>
    Twitter for Dogs - WOOF at your doggo pals!
  </h2>

  <%= link_to "Sign up now!", new_user_path, class: "btn btn-lg btn-primary" %>
</div>

<% end %>
