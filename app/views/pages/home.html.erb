<% provide(:title, "Home") %>

<% if @current_user.present? %>

<section class="stats">
  <%= render 'shared/stats' %>
</section>


<% @woofs.each do |woof| %>
  <ul class="woofs">
    <li><span class="user-name"><%= woof.user.name %></span> <%= woof.status %><BR/>
    <%= time_ago_in_words(woof.created_at)  %> ago
    <BR/>
    <% if @current_user.id == woof.user.id %>
      <div class="woof-controls">
        <%= link_to 'Edit', edit_woof_path(woof)%>
        <%= link_to 'Delete', woof, :method => 'delete', :data => { :confirm => 'Are you sure?' }%>
      </div></li>
      <% end %>
  </ul>

<% end %>

<% else %>

<div class="center jumbotron">
  <h1>Welcome to WOOFER</h1>

  <h2>
    Twitter for Dogs - WOOF at your doggo pals!
  </h2>

  <%= link_to "Sign up now!", new_user_path, class: "btn btn-lg btn-primary" %>
</div>






<% end %>
